class Solution {
  public:
void shortest_distance(vector<vector<int>>&dist){
	    // Code here
	    int v = dist.size();
	    
	    for(int k = 0; k < v; k++){
	        for(int i = 0; i < v; i++){
	            for(int j = 0; j < v; j++){
	                if(i == k || j == k || dist[i][k] == -1 || dist[k][j] == -1) 
	                    continue;
	                else if(dist[i][j] == -1)
	                    dist[i][j] = INT_MAX;
	               
	                dist[i][j] = min(dist[i][j], dist[i][k] + dist[k][j]);
	            }
	        }
	    }

	}

};
